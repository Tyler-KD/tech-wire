<div class="row">
    <div class="col-auto">
        {{!-- Greeting for user after logging in --}}
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Edit Blog:</h3>
        {{!-- Form for creating a new blog --}}
        <form class="form new-blog-form">
            <div class="form-group">
                {{!-- Blog title form input --}}
                <label for="blog-title">Title:</label>
                <input value="{{title}}" class="form-input" type="text" id="blog-title" name="blog-title" />
            </div>
            <div class="form-group">
                {{!-- Blog content form input --}}
                <label for="blog-content">Content:</label>
                
                <textarea  class="form-input" id="blog-content" name="blog-content">{{content}}</textarea>
            </div>
            <div class="form-group">
                {{!-- Create blog button --}}
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
    
    <script src="/js/edit-post.js"></script>
