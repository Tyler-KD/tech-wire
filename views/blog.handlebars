<div class="text-center">
  <h2>{{title}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{content}}</p>
  <p>Created by {{user.username}} on {{format_date date_created}}</p>
  <h2>Comment History:</h2>
  {{!-- {{#each comments}} --}}
    <div class="comment mb-3">
      <p>{{comment_input}}</p>
      <p>By {{user.username}} on {{format_date date_created}}</p>
    </div>
  {{!-- {{/each}} --}}
</div>