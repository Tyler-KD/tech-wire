<div class="row">
    <div class="col-auto">
        <h2>Welcome, {{username}}!</h2>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-6">
        <h3>Create a New Blog:</h3>
        {{!-- Form for creating a new blog --}}
        <form class="form new-blog-form">
            <div class="form-group">
                <label for="blog-name">Title:</label>
                <input class="form-input" type="text" id="blog-name" name="blog-name" />
            </div>
            <div class="form-group">
                <label for="blog-desc">Content:</label>
                <textarea class="form-input" id="blog-desc" name="blog-desc"></textarea>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
        </form>
    </div>
    <!-- Conditionally render blogs with delete buttons -->
    {{!-- handlebars for loop --}}
    {{#if blogs.length}}
    <div class="col-md-6 blog-list">
        <h3>Current Blogs:</h3>
        {{!-- Built-in each helper iterates over blogs. Inside the block, you can use this to reference the element
        being iterated over. --}}
        {{#each blogs as |blog|}}
        <div class="row mb-2">
            <div class="col-md-8">
                <h4><a href="/blog/{{blog.id}}">{{blog.title}}</a></h4>
            </div>
            <div class="col-md-4">
                {{!-- Delete blog post button --}}
                <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
            </div>
        </div>
        {{/each}}
    </div>
    {{/if}}
</div>

<script src="/js/dashboard.js"></script>